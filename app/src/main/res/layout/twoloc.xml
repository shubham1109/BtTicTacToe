<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialogboxx"
    android:baselineAligned="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Local Game"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />



    <EditText
android:id="@+id/editText"
android:inputType="textPersonName"
android:layout_width="210dp"
android:layout_height="wrap_content"
    android:layout_marginLeft="70dp"
        android:layout_marginBottom="4dp"
android:hint="PLAYER 1"
    android:textColor="#000000" />

<EditText
android:id="@+id/editText2"
android:inputType="textPersonName"
android:layout_width="210dp"
android:layout_height="wrap_content"
    android:layout_marginLeft="70dp"
    android:layout_marginBottom="4dp"
android:hint="PLAYER 2"
    android:textColor="#000000" />

<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="55dp">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/markhead1"
    android:text="Player 1 "
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_weight="1"
    android:layout_marginLeft="30dp"
    android:textColor="#000000" />

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/markhead2"
    android:text="Player2"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_weight="1"
    android:layout_marginRight="30dp"
    android:textColor="#000000" />
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/markpl1"
    android:src="@drawable/tic_tac_toe_o"
    android:layout_weight="1"
    android:layout_marginLeft="10dp" />

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/markpl2"
    android:src="@drawable/tic_tac_toe_x"
    android:layout_weight="1"
    android:layout_marginRight="10dp" />

</LinearLayout>

<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp">

<Button
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:text="START"
    android:id="@+id/btn_start"
    android:layout_weight="1"
    android:background="@drawable/btnborder"
    android:layout_marginLeft="20dp"
    android:textStyle="bold"
    android:textSize="15dp"
    android:layout_marginRight="5dp" />

<Button
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:text="CANCEL"
    android:id="@+id/btn_cancel"
    android:layout_weight="1"
    android:background="@drawable/btnborder"
    android:layout_marginRight="20dp"
    android:textStyle="bold"
    android:textSize="15dp" />
</LinearLayout>


    </LinearLayout>
