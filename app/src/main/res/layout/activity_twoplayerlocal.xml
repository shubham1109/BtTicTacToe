<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/f"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv10"
        android:background="@drawable/score"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp">


        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:id="@+id/one_one"
            android:background="@drawable/tic_tac_toe_blank"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:id="@+id/one_two"
            android:background="@drawable/tic_tac_toe_blank"
            android:layout_toRightOf="@+id/one_one"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="55dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:id="@+id/one_three"
            android:background="@drawable/tic_tac_toe_blank"
            android:layout_toRightOf="@+id/one_two"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="30dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/two_one"
            android:layout_below="@+id/one_one"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/two_two"
            android:layout_toRightOf="@+id/two_one"
            android:layout_below="@+id/one_two"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="60dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/two_three"
            android:layout_toRightOf="@+id/two_two"
            android:layout_below="@+id/one_three"
            android:layout_marginBottom="35dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/three_three"
            android:layout_toRightOf="@+id/three_two"
            android:layout_below="@+id/two_three" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/three_two"
            android:layout_toRightOf="@+id/three_one"
            android:layout_below="@+id/two_one"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="55dp" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:background="@drawable/tic_tac_toe_blank"
            android:id="@+id/three_one"
            android:layout_below="@+id/two_one"
            android:layout_marginLeft="5dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:background="@drawable/score"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="15dp"
            android:id="@+id/player_one_score"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/player_name"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:id="@+id/player_two_score"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/computer_name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


</LinearLayout>